{
  "extends": ["config:base"],
  "dockerfile": {
    "fileMatch": ["Dockerfile"]
  },
  "regexManagers": [
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": [
        "ARG (?<packageName>[A-Z_]+)_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["(?i)^KUBE_VERSION$"],
      "packageName": "kubernetes/kubernetes"
    },
    {
      "matchPackagePatterns": ["(?i)^HELM_VERSION$"],
      "packageName": "helm/helm"
    },
    {
      "matchPackagePatterns": ["(?i)^ORA_VERSION$"],
      "packageName": "oras-project/oras"
    },
    {
      "matchPackagePatterns": ["(?i)^KIND_VERSION$"],
      "packageName": "kubernetes-sigs/kind"
    },
    {
      "matchPackagePatterns": ["(?i)^DOCKER_VERSION$"],
      "packageName": "moby/moby"
    },
    {
      "matchPackagePatterns": ["(?i)^K3D_VERSION$"],
      "packageName": "k3d-io/k3d"
    },
    {
      "matchPackagePatterns": ["(?i)^OP_VERSION$"],
      "packageName": "1Password/op"
    },
    {
      "matchPackagePatterns": ["(?i)^LULA_VERSION$"],
      "packageName": "defenseunicorns/lula"
    },
    {
      "matchPackagePatterns": ["(?i)^UDS_VERSION$"],
      "packageName": "defenseunicorns/uds-cli"
    },
    {
      "matchPackagePatterns": ["(?i)^ZARF_VERSION$"],
      "packageName": "defenseunicorns/zarf"
    },
    {
      "matchPackagePatterns": ["(?i)^GH_VERSION$"],
      "packageName": "cli/cli"
    }
  ]
}
