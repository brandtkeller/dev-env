{
  "extends": ["config:base"],
  "dockerfile": {
    "fileMatch": ["Dockerfile"]
  },
  "regexManagers": [
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ARG KUBE_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"],
      "datasource": "github-releases",
      "depName": "kubernetes/kubernetes"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ARG HELM_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"],
      "datasource": "github-releases",
      "depName": "helm/helm"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ARG ORA_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"],
      "datasource": "github-releases",
      "depName": "oras-project/oras"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ARG KIND_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"],
      "datasource": "github-releases",
      "depName": "kubernetes-sigs/kind"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ARG DOCKER_VERSION=['\"]?(?<currentValue>\\d+\\.\\d+\\.\\d+)['\"]?"],
      "datasource": "github-releases",
      "depName": "moby/moby"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ARG K3D_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"],
      "datasource": "github-releases",
      "depName": "k3d-io/k3d"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ARG OP_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"],
      "datasource": "github-releases",
      "depName": "1Password/op"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ARG LULA_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"],
      "datasource": "github-releases",
      "depName": "defenseunicorns/lula"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ARG UDS_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"],
      "datasource": "github-releases",
      "depName": "defenseunicorns/uds-cli"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ARG ZARF_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"],
      "datasource": "github-releases",
      "depName": "defenseunicorns/zarf"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ARG GH_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"],
      "datasource": "github-releases",
      "depName": "cli/cli"
    }
  ]
}
