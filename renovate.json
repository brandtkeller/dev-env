{
  "extends": ["config:base"],
  "dockerfile": {
    "fileMatch": ["Dockerfile"]
  },
  "regexManagers": [
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": ["ARG (?<depName>[A-Z_]+)_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"],
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["KUBE_VERSION"],
      "datasource": "github-releases",
      "depName": "kubernetes/kubernetes"
    },
    {
      "matchPackageNames": ["HELM_VERSION"],
      "datasource": "github-releases",
      "depName": "helm/helm"
    },
    {
      "matchPackageNames": ["ORA_VERSION"],
      "datasource": "github-releases",
      "depName": "oras-project/oras"
    },
    {
      "matchPackageNames": ["KIND_VERSION"],
      "datasource": "github-releases",
      "depName": "kubernetes-sigs/kind"
    },
    {
      "matchPackageNames": ["DOCKER_VERSION"],
      "datasource": "github-releases",
      "depName": "moby/moby"
    },
    {
      "matchPackageNames": ["K3D_VERSION"],
      "datasource": "github-releases",
      "depName": "k3d-io/k3d"
    },
    {
      "matchPackageNames": ["OP_VERSION"],
      "datasource": "github-releases",
      "depName": "1Password/op"
    },
    {
      "matchPackageNames": ["LULA_VERSION"],
      "datasource": "github-releases",
      "depName": "defenseunicorns/lula"
    },
    {
      "matchPackageNames": ["UDS_VERSION"],
      "datasource": "github-releases",
      "depName": "defenseunicorns/uds-cli"
    },
    {
      "matchPackageNames": ["ZARF_VERSION"],
      "datasource": "github-releases",
      "depName": "defenseunicorns/zarf"
    },
    {
      "matchPackageNames": ["GH_VERSION"],
      "datasource": "github-releases",
      "depName": "cli/cli"
    }
  ]
}
