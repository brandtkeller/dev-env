{
  "extends": ["config:base"],
  "dockerfile": {
    "fileMatch": ["Dockerfile"]
  },
  "regexManagers": [
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": [
        "ARG (?<varName>[A-Z_]+)_VERSION=['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "{{varName | replace('_VERSION', '') | lowercase}}",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["(?i)^kube$"],
      "packageName": "kubernetes/kubernetes"
    },
    {
      "matchPackagePatterns": ["(?i)^helm$"],
      "packageName": "helm/helm"
    },
    {
      "matchPackagePatterns": ["(?i)^ora$"],
      "packageName": "oras-project/oras"
    },
    {
      "matchPackagePatterns": ["(?i)^kind$"],
      "packageName": "kubernetes-sigs/kind"
    },
    {
      "matchPackagePatterns": ["(?i)^docker$"],
      "packageName": "moby/moby"
    },
    {
      "matchPackagePatterns": ["(?i)^docker_buildx$"],
      "packageName": "docker/buildx"
    },
    {
      "matchPackagePatterns": ["(?i)^k3d$"],
      "packageName": "k3d-io/k3d"
    },
    {
      "matchPackagePatterns": ["(?i)^op$"],
      "packageName": "1Password/op"
    },
    {
      "matchPackagePatterns": ["(?i)^lula$"],
      "packageName": "defenseunicorns/lula"
    },
    {
      "matchPackagePatterns": ["(?i)^uds$"],
      "packageName": "defenseunicorns/uds-cli"
    },
    {
      "matchPackagePatterns": ["(?i)^zarf$"],
      "packageName": "zarf-dev/zarf"
    },
    {
      "matchPackagePatterns": ["(?i)^gh$"],
      "packageName": "cli/cli"
    }
  ]
}
